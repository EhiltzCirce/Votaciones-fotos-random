---
import { memesImages } from "@/logic/memes"

interface Props {
  classPicture?: string
  classImage?: string
}

const { classPicture, classImage } = Astro.props
---

<div class="mt-5 grid grid-cols-2 gap-5 sm:grid-cols-4">
  {
    memesImages.map((memeImage) => (
      <picture class={`image-container cursor-zoom-in border rounded-lg ${classPicture} ${memeImage.class}`} data-url={memeImage.image} data-id={memeImage.id}>
        <img
          decoding="async" 
          loading="lazy"
          src={memeImage.image} 
          alt={`Imagen ${memeImage.id}`} 
          class={`size-full rounded-lg ${classImage}`}/>
      </picture>
    ))
  }
</div>